<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">

<suite name="Class-Based Test Execution" verbose="1" parallel="classes" thread-count="3">

    <parameter name="browser" value="chrome"/>
    <parameter name="headless" value="false"/>
    <parameter name="baseUrl" value="http://localhost:3000"/>

    <listeners>
        <listener class-name="com.automation.listeners.TestListener"/>
        <listener class-name="com.automation.listeners.ExtentReportListener"/>
    </listeners>

    <!-- Execute specific test classes -->
    <test name="Class Execution - UI Tests" preserve-order="true">
        <parameter name="testType" value="ui-tests"/>
        <classes>
            <class name="com.automation.tests.DashboardTest"/>
            <class name="com.automation.tests.TaskManagementTest"/>
            <class name="com.automation.tests.UserManagementTest"/>
            <class name="com.automation.tests.OrderManagementTest"/>
            <class name="com.automation.tests.ApplicationSetupTest"/>
            <class name="com.automation.tests.SimpleApplicationTest"/>
            <class name="com.automation.tests.ProductManagementTest"/>
            <class name="com.automation.tests.ThemeAndFileUploadTest"/>
            <class name="com.automation.tests.SearchFunctionalityTest"/>
        </classes>
    </test>
</suite>